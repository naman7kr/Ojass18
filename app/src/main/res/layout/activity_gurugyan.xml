<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v4.view.ViewPager

android:id="@+id/guru_viewpager"
android:layout_height="match_parent"
android:layout_width="match_parent"
    >

</android.support.v4.view.ViewPager>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/gurugyan_dots"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_above="@+id/mycardview"
        />

    <ImageView
        android:id="@+id/gurugyan_goright"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/background_rounded"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_above="@+id/mycardview"
        android:layout_marginLeft="200dp"
        />
    <ImageView
        android:id="@+id/gurugyan_goleft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/background_rounded"
        android:src="@drawable/ic_arrow_back_black_24dp"
       android:layout_above="@+id/mycardview"
        android:layout_marginLeft="120dp"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/mycardview"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#99757575"
        >


        <TextView
            android:id="@+id/gurugyan_name"
            android:textColor="#FFF"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            />

    </android.support.v7.widget.CardView>

    </RelativeLayout>

